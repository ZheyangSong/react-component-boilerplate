{
  "name": "react-component-boilerplate",
  "version": "0.0.1",
  "description": "A project boilerplate for creating a React Component in TSX",
  "main": "dist/main.bundle.js",
  "scripts": {
    "webdev": "webpack-dev-server --env=development --progress --port 8080",
    "start": "nodemon --exec \"npm run webdev\"",
    "test": "echo \"Error: no test specified\" && exit 1",
    "clean:all": "npm cache clean && rimraf dist/ node_modules/",
    "clean:build": "rimraf dist/",
    "build": "webpack --env=production",
    "rebuild": "npm run clean:build && npm run build",
    "build:dev": "webpack --env=development"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ZheyangSong/react-component-boilerplate.git"
  },
  "author": "Zheyang Song",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ZheyangSong/react-component-boilerplate/issues"
  },
  "homepage": "https://github.com/ZheyangSong/react-component-boilerplate#readme",
  "dependencies": {
    "react": "^15.6.1",
    "react-dom": "^15.6.1"
  },
  "devDependencies": {
    "@types/extract-text-webpack-plugin": "^2.1.0",
    "@types/html-webpack-plugin": "^2.28.0",
    "@types/node": "^8.0.16",
    "@types/react": "^15.0.39",
    "@types/react-dom": "^15.5.1",
    "@types/react-hot-loader": "^3.0.3",
    "@types/webpack": "^3.0.5",
    "@types/webpack-env": "^1.13.0",
    "autoprefixer": "^7.1.2",
    "awesome-typescript-loader": "^3.2.1",
    "css-loader": "^0.28.4",
    "extract-text-webpack-plugin": "^3.0.0",
    "html-loader": "^0.4.5",
    "html-webpack-plugin": "^2.29.0",
    "json-loader": "^0.5.7",
    "node-sass": "^4.5.3",
    "nodemon": "^1.11.0",
    "postcss-loader": "^2.0.6",
    "react-hot-loader": "^3.0.0-beta.7",
    "rimraf": "^2.6.1",
    "sass-loader": "^6.0.6",
    "source-map-loader": "^0.2.1",
    "style-loader": "^0.18.2",
    "ts-node": "^3.3.0",
    "typescript": "^2.4.2",
    "webpack": "^3.4.0",
    "webpack-dev-server": "^2.6.1"
  }
}
